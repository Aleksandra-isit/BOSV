<Application x:Class="TryCameraEnguCV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TryCameraEnguCV"
             >
    <Application.Resources>

        <!-- Стиль для ToggleButton как переключателя Да/Нет -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#444"/>
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- Фон переключателя -->
                            <Border x:Name="SwitchBackground"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="15"/>
                            <!-- Кнопка/ползунок -->
                            <Ellipse x:Name="SwitchThumb"
                                     Width="26" Height="26"
                                     Fill="White"
                                     Margin="2"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Состояние включено -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="#FFFFF700"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="32,2,2,2"/>
                            </Trigger>
                            <!-- Состояние выключено -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="#575656"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Left"/>
                                <Setter TargetName="SwitchThumb" Property="Margin" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DarkComboBoxStyle выпадающий список -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2B2B3C"/>
            <Setter Property="BorderBrush" Value="#FFFFB3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Основной бордер -->
                            <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            Margin="5"/>

                            <!-- Контент выбранного элемента -->
                            <ContentPresenter x:Name="ContentSite"
                                      Margin="10,2,30,2"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                            <!-- Кнопка для раскрытия -->
                            <ToggleButton x:Name="DropDownToggle"
                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                  Background="Transparent"
                                  BorderBrush="Transparent"
                                  Focusable="False"
                                  FocusVisualStyle="{x:Null}"
                                  HorizontalAlignment="Right"
                                  Width="30">
                                <Path x:Name="Arrow"
                              Data="M 0 0 L 4 4 L 8 0 Z"
                              Fill="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                            </ToggleButton>

                            <!-- Popup для списка -->
                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Fade"
                           MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                <Border Background="#2B2B3C"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="5">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Disabled состояние -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>

                            <!-- Наведение курсора на ComboBox -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFFFF700"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#FFFFF700"/>
                            </Trigger>

                            <!-- Открытый список -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FFFFF700"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#FFFFF700"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DarkSliderStyle ползунок -->
        <Style x:Key="DarkSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2B2B3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track"
                           VerticalAlignment="Center">
                                <!-- Задний фон (канал) -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" 
                                          Background="#FFFFB3" 
                                          Height="6" 
                                          BorderThickness="0" 
                                          Focusable="False"/>
                                </Track.DecreaseRepeatButton>

                                <!-- Передний фон (после ползунка) -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" 
                                          Background="#444" 
                                          Height="6" 
                                          BorderThickness="0" 
                                          Focusable="False"/>
                                </Track.IncreaseRepeatButton>

                                <!-- Ползунок -->
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="20" Height="20">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#2B2B3C"
                                                BorderBrush="#FFFFB3"
                                                BorderThickness="2"
                                                CornerRadius="10"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Background" Value="#3B3B4C"/>
                                <Setter TargetName="Thumb" Property="BorderBrush" Value="#FFFFF700"/>
                            </Trigger>
                            <!-- Перетаскивание -->
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="True">
                                <Setter TargetName="Thumb" Property="Background" Value="#555"/>
                                <Setter TargetName="Thumb" Property="BorderBrush" Value="#FFFFF700"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для тёмной ToggleButton -->
        <Style x:Key="DarkToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2B2B3C"/>
            <Setter Property="BorderBrush" Value="#FFFFB3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFFFF700"/>
                                <Setter TargetName="border" Property="Background" Value="#3B3B4C"/>
                            </Trigger>

                            <!-- Нажатие -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>

                            <!-- Состояние включено -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B4B5C"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFFFF700"/>
                                <Setter Property="Foreground" Value="#FFFFF700"/>
                            </Trigger>

                            <!-- Отключено -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#777"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
